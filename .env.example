# CheckPoint MCP Manager Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Ollama Configuration
# =============================================================================
OLLAMA_HOST=http://network-host:11434
SECURITY_MODEL=saki007ster/cybersecurityriskanalyst
GENERAL_MODEL=llama3.1

# =============================================================================
# CheckPoint Management API Configuration
# =============================================================================
# Management Server
CHECKPOINT_MANAGEMENT_HOST=your-management-server.domain.com
CHECKPOINT_MANAGEMENT_PORT=443
CHECKPOINT_MANAGEMENT_USERNAME=your_api_username
CHECKPOINT_MANAGEMENT_PASSWORD=your_api_password
CHECKPOINT_MANAGEMENT_API_KEY=your_api_key

# Management Logs
CHECKPOINT_LOGS_HOST=your-logs-server.domain.com
CHECKPOINT_LOGS_USERNAME=your_logs_username
CHECKPOINT_LOGS_PASSWORD=your_logs_password
CHECKPOINT_LOGS_API_KEY=your_logs_api_key

# Threat Prevention
CHECKPOINT_TP_HOST=your-tp-server.domain.com
CHECKPOINT_TP_USERNAME=your_tp_username
CHECKPOINT_TP_PASSWORD=your_tp_password
CHECKPOINT_TP_API_KEY=your_tp_api_key

# HTTPS Inspection
CHECKPOINT_HTTPS_HOST=your-https-server.domain.com
CHECKPOINT_HTTPS_USERNAME=your_https_username
CHECKPOINT_HTTPS_PASSWORD=your_https_password
CHECKPOINT_HTTPS_API_KEY=your_https_api_key

# Harmony SASE
CHECKPOINT_SASE_HOST=your-sase-portal.domain.com
CHECKPOINT_SASE_API_KEY=your_sase_api_key
CHECKPOINT_SASE_CLIENT_ID=your_sase_client_id
CHECKPOINT_SASE_CLIENT_SECRET=your_sase_client_secret

# Reputation Service
CHECKPOINT_REPUTATION_API_KEY=your_reputation_api_key

# Gateway CLI
CHECKPOINT_GW_HOST=your-gateway.domain.com
CHECKPOINT_GW_USERNAME=your_gw_username
CHECKPOINT_GW_PASSWORD=your_gw_password
CHECKPOINT_GW_SSH_KEY=/path/to/your/ssh/private/key

# Connection Analysis
CHECKPOINT_CONN_ANALYSIS_HOST=your-gateway.domain.com
CHECKPOINT_CONN_ANALYSIS_USERNAME=your_analysis_username
CHECKPOINT_CONN_ANALYSIS_PASSWORD=your_analysis_password

# Threat Emulation
CHECKPOINT_TE_API_KEY=your_threat_emulation_api_key
CHECKPOINT_TE_HOST=te.checkpoint.com

# GAIA
CHECKPOINT_GAIA_HOST=your-gaia-system.domain.com
CHECKPOINT_GAIA_USERNAME=your_gaia_username
CHECKPOINT_GAIA_PASSWORD=your_gaia_password

# Spark Management
CHECKPOINT_SPARK_HOST=your-spark-portal.domain.com
CHECKPOINT_SPARK_API_KEY=your_spark_api_key
CHECKPOINT_SPARK_USERNAME=your_spark_username
CHECKPOINT_SPARK_PASSWORD=your_spark_password

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=CheckPoint MCP Manager
DATA_DIRECTORY=./data
LOG_LEVEL=INFO
AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
MAX_BACKUPS=30

# Security Settings
SESSION_TIMEOUT=60
ENCRYPTION_ITERATIONS=100000
REQUIRE_PASSWORD_CONFIRM=true

# =============================================================================
# Development Settings (Optional)
# =============================================================================
DEBUG=false
STREAMLIT_SERVER_PORT=5000
STREAMLIT_SERVER_ADDRESS=0.0.0.0
AUTO_REFRESH_INTERVAL=30

# =============================================================================
# Network Settings
# =============================================================================
CONNECTION_TIMEOUT=30
MAX_RETRIES=3
HEALTH_CHECK_INTERVAL=300

# =============================================================================
# Notes
# =============================================================================
# 1. Never commit the actual .env file with real credentials to version control
# 2. Use strong passwords and secure API keys
# 3. For production, consider using environment-specific configurations
# 4. SSH keys should be properly secured with appropriate file permissions (600)
# 5. Test connectivity to all services before deploying
